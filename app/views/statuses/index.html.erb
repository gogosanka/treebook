<div class="page-header">
  <table>
    <th><h1>ViewBook <a role="button" class="btn btn-primary btn-xs" href="/statuses/new">Create Something</a></h1></th>
    <th align="bottom"></th>
  </table>
</div>

<% @statuses.each do |status| %>
<div class="status" align="right">
  <strong>Name</strong> <%= status.content %>
  <div class="meta">
    
    <i><small><%= link_to "created " +time_ago_in_words(status.created_at) + " ago", status %></small></i>

    <span class="admin">
      <small><%= link_to "Edit", edit_status_path(status) %></small> |
    </span>

    <span class="admin">
      <small><%= link_to "Remove", status, method: :delete, data: { confirm: "Sure you want to remove this from your ViewBook?"} %></small>
    </span> 
  </div>
</div>
<%end%>

